<table id="posts">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Body</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody class="page">
    <% @posts.each do |post| %>
      <%= render partial: 'post', locals: {post: post} %>
    <% end %>
  </tbody>
</table>

<%= paginate @posts, remote: true %>
